<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:background="@color/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="6dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/accent_border_fill">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginVertical="2dp"
            android:text="아래 집중레포트를 참고해봐!"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="10dp"
            android:textStyle="bold" />
    </FrameLayout>

    <ImageView
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/chat_box"
        android:layout_marginBottom="-10dp"
        android:rotation="180" />
    <ImageView
        android:layout_width="145dp"
        android:layout_height="116dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lazy_brain"
        android:id="@+id/main_logo"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sl_result_report_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:background="@drawable/two_round_border_fill"
        android:id="@+id/rv_report_all_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
