<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_rv_report_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="11dp"
    android:paddingHorizontal="50dp">
    <LinearLayout
        android:id="@+id/ll_rv_item_result_overview_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rv_item_product_overview_date"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/notosanslight"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                tools:text="dd:ddc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rv_item_product_overview_time"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/notosanslight"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                tools:text="땡시 땡분"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_rv_item_product_overview_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체 학습 시간"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/notosansbold"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rv_item_product_overview_study_time"
                android:textSize="15sp"
                android:fontFamily="@font/notosansregular"
                android:textColor="@color/colorGray"
                android:layout_marginStart="10dp"
                tools:text="time"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_rv_item_product_overview_real_focus"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="실제 집중 시간"
                android:fontFamily="@font/notosansbold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rv_item_product_overview_real_focus_time"
                android:textSize="15sp"
                android:fontFamily="@font/notosansregular"
                android:textColor="@color/colorAccentRed"
                android:layout_marginStart="10dp"
                tools:text="time"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <ProgressBar
            android:id="@+id/rv_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="0dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/score_circle_bar_red"
            android:secondaryProgress="0"
            android:textAlignment="textEnd" />
        <TextView
            android:id="@+id/txt_rv_item_product_overview_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/notosansblack"
            tools:text="00"
            android:layout_marginEnd="35dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccentRed"
            android:textSize="42sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
