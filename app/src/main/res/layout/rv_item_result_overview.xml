<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_rv_report_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="11dp"
    android:paddingHorizontal="20dp">
    <LinearLayout
        android:id="@+id/ll_rv_item_result_overview_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_rv_item_product_overview_date"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_marginVertical="5dp"
                android:layout_marginBottom="5dp"
                android:text="dd:ddc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_rv_item_product_overview_time"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="땡시 땡분"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_rv_item_product_overview_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="전체 학습 시간"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_rv_item_product_overview_study_time"
                android:textSize="15dp"
                android:textColor="@color/colorGray" android:text="time"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_rv_item_product_overview_real_focus"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="실제 집중 시간"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tv_rv_item_product_overview_real_focus_time"
                android:textSize="15dp"
                android:textColor="@color/colorAccentRed"
                android:text="time"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_rv_item_product_overview_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginVertical="5dp"
        android:layout_marginBottom="5dp"
        android:paddingRight="20dp"
        android:gravity="right"
        android:text="76"
        android:textColor="@color/colorAccentRed"
        android:textSize="52dp"
        android:textStyle="bold" />

</LinearLayout>
