<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval" >

    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="oval" >
            <solid android:color="@color/colorAccentRed" />
        </shape>
    </item>

    <!-- shadow -->
    <item
        android:bottom="6dp"
        android:left="12dp"
        android:right="6dp"
        android:top="12dp">
        <shape android:shape="oval" >
            <gradient
                android:angle="135"
                android:centerColor="#11000000"
                android:endColor="#20000000"
                android:startColor="#00000000"
                android:type="linear"
                android:useLevel="false" />

            <size
                android:height="50dp"
                android:width="50dp" />
        </shape>
    </item>

</layer-list>
